# Should run after the mirror pulse.  The mirror tends to finish by
# the ctime of rsync.log.* in ~archvsync.

source config.sh
files=$topdir/files
logs=$files/logs
log=$logs/sourcedeps.log

test -d $files || mkdir -p $files
test -d $logs || mkdir -p $logs

if [ -s $log ]
then
    savelog -c 14 $log > /dev/null
fi

exec >$log 2>&1

date

if lockfile -600 -r5 "${files}/sourcedeps.lock"
then
    $topdir/bin/generate-sourcedeps
    mkdir -p "$htmldir"/dists{,.new}
    for suite in $suites
    do
	mkdir -p "$htmldir"/dists{,.new}/$suite
	for sect in $sections
	do
	    mkdir -p "$htmldir/dists.new/$suite/$sect"
	    for arch in $architectures
	    do
		mkdir -p "$htmldir/dists.new/$suite/$sect/binary-$arch"
	    done
	done
    done	
    apt-ftparchive generate conf/apt-ftparchive.conf
    for suite in $suites
    do
	apt-ftparchive -c conf/apt-ftparchive.conf \
	    -o "APT::FTPArchive::Release::Suite=$suite" \
	    -o "APT::FTPArchive::Release::Description=Sourcedep packages for $suite" \
	    release "$htmldir/dists.new/$suite" >"$htmldir/dists.new/$suite/Release"
	if [ -n "$sourcedeps_key" ]
	then
	    gpg --yes --default-key "$sourcedeps_key" --no-default-keyring \
		--keyring conf/keyring.gpg --secret-keyring conf/secring.gpg \
		--armor --output "$htmldir/dists.new/$suite/Release.gpg" \
		--detach-sign "$htmldir/dists.new/$suite/Release"
	fi
	rsync -av "$htmldir/dists.new/$suite/" "$htmldir/dists/$suite/"
    done

    cd $htmldir
    for file in $((find pool/ -name '*.deb'; cat $files/db/deb_list_*.txt) | sort | uniq -u)
    do
	rm -v "$file"
    done

    rm -f "${files}/sourcedeps.lock"
else
    echo "couldn't aquire sourcedeps lock file in due time"
fi
date
